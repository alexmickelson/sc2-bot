@inherits LayoutComponentBase

<div class="flex flex-col md:flex-row h-screen">
    <main class="
        flex-1 flex flex-col min-w-0 overflow-auto 
        bg-linear-to-tr from-[#010e23] to-[#0a2711]
        pb-48
    ">
        <NavLink href="/" class="mr-4 text-gray-400 hover:text-white flex">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg> Home
        </NavLink>
        <article class="p-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet
    class="fixed bottom-0 left-0 w-full z-50 bg-yellow-100 text-yellow-900 p-4 shadow-lg hidden">
    An unhandled error has occurred.
    <a href="." class="reload underline font-bold">Reload</a>
    <span class="dismiss cursor-pointer font-bold float-right">🗙</span>
</div>