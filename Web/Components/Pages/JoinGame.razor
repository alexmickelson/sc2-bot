@page "/join-game"
@using Web.Components.InitGame
@using Web.Services
@rendermode InteractiveServer

<PageTitle>Join Game</PageTitle>

<div class="flex items-center mb-4">
  <h1 class="text-2xl font-bold text-white">Join Multiplayer Game
  </h1>
</div>


<CustomErrorBoundary>
  <ClientAndConnection Key=@Key />
</CustomErrorBoundary>

<CustomErrorBoundary>
  <CreateOrLeaveGame Type="joiningMultiplayer" Key=@Key />
</CustomErrorBoundary>

<CustomErrorBoundary>
  <GameState Key=@Key />
</CustomErrorBoundary>

<CustomErrorBoundary>
  <RequestHistory Key=@Key />
</CustomErrorBoundary>


@code {
  private string Key = "Player2";
}