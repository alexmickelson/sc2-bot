@using SC2APIProtocol
@using Web.Services
@inject SC2Client SC2Client
@implements IDisposable

<div class="bg-gray-800/50 text-gray-50 shadow rounded-lg mb-3">
  <div class="p-4">
    <h5 class="text-lg font-medium mb-2">Created Games</h5>

    @if (gameExists)
    {
      <div class="border border-gray-700 rounded-md">
        <div class="p-4 border-b border-gray-700 last:border-b-0">
          <div class="flex justify-between w-full">
            <h5 class="mb-1 font-medium">Active Game</h5>
            <small class="text-gray-400">@status</small>
          </div>
          @if (gameInfo != null)
          {
            <p class="mb-1">Map: @gameInfo.MapName</p>
            <small class="text-gray-500">Players: @gameInfo.PlayerInfo.Count</small>
            <ul class="list-disc list-inside mt-2">
              @foreach (var player in gameInfo.PlayerInfo)
              {
                <li>Player @player.PlayerId: @player.Type (@player.RaceActual)</li>
              }
            </ul>
          }
          else
          {
            <p class="mb-1">Game created. Waiting to join.</p>
          }
        </div>
      </div>
    }
    else
    {
      <p class="text-gray-500">No games created.</p>
    }
  </div>
</div>

@code {
  private bool gameExists = false;
  private Status status = Status.Unknown;
  private ResponseGameInfo? gameInfo;

  protected override async Task OnInitializedAsync()
  {
    SC2Client.OnGameStateChanged += Refresh;
    await UpdateState();
  }

  private async void Refresh()
  {
    await InvokeAsync(async () =>
    {
      await UpdateState();
      StateHasChanged();
    });
  }

  private async Task UpdateState()
  {
    status = SC2Client.CurrentStatus;
    gameExists = status == Status.InitGame || status == Status.InGame;

    if (gameExists)
    {
      try
      {
        // GameInfo might fail in InitGame state, but let's try
        gameInfo = await SC2Client.GetGameInfoAsync();
      }
      catch
      {
        // Ignore errors if we can't get info yet
        gameInfo = null;
      }
    }
    else
    {
      gameInfo = null;
    }
  }

  public void Dispose()
  {
    SC2Client.OnGameStateChanged -= Refresh;
  }
}