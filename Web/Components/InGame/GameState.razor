@using SC2APIProtocol
@using Web.Services
@using System.Threading
@using Web.Components.InGame.Map
@using Web.Components.InGame.Observation
@using Web.Components.InGame
@inject ClientManager clientManager
@implements IDisposable

<div class="bg-gray-800/50 text-gray-50 shadow rounded-lg mt-3">
    <div class="p-4">
        <h5 class="text-lg font-medium mb-2">Game State</h5>
        <div class="mb-3">
            <button
                class="px-4 py-2 rounded font-semibold transition-colors duration-200 bg-cyan-800 text-cyan-50 hover:bg-cyan-700 mr-2"
                @onclick="GetObservation">Refresh State</button>
            <button
                class="px-4 py-2 rounded font-semibold transition-colors duration-200 @(isAutoRefreshing ? "bg-red-800 text-red-50 hover:bg-red-700" : "bg-green-800 text-green-50 hover:bg-green-700")"
                @onclick="ToggleAutoRefresh">
                @(isAutoRefreshing ? "Stop Auto-Refresh" : "Start Auto-Refresh")
            </button>
        </div>

        @if (mostRecentObservation != null)
        {
            <p>Game Loop: @mostRecentObservation.GameLoop</p>
            <p>Minerals: @mostRecentObservation.PlayerCommon.Minerals</p>
            <p>Vespene: @mostRecentObservation.PlayerCommon.Vespene</p>
            <p>Supply: @mostRecentObservation.PlayerCommon.FoodUsed / @mostRecentObservation.PlayerCommon.FoodCap</p>

            <MapVisualizer MapState="@mostRecentObservation.RawData.MapState"
                Units="@mostRecentObservation.RawData.Units" />

            <ScoreDisplay Score="@mostRecentObservation.Score" />

            <FeatureLayerDisplay Observation="@mostRecentObservation" />

            <RenderedDisplay Observation="@mostRecentObservation" Key=@Key />
        }
        else
        {
            <p>No observation data available.</p>
        }
    </div>
</div>

@code {
    [Parameter]
    public string Key { get; set; } = "";

    private SC2Client sc2Client = default!;
    private ResponseObservation? observation;
    private SC2APIProtocol.Observation? mostRecentObservation;
    private bool isAutoRefreshing = false;
    private CancellationTokenSource? cts;

    protected override void OnInitialized()
    {
        var group = clientManager.GetOrCreateGroup(Key);
        sc2Client = group.SC2Client;
    }

    private async Task GetObservation()
    {
        try
        {
            observation = await sc2Client.GetObservationAsync();
            mostRecentObservation = observation?.Observation ?? mostRecentObservation;
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error getting observation: {ex.Message}");
        }
    }

    private void ToggleAutoRefresh()
    {
        isAutoRefreshing = !isAutoRefreshing;
        if (isAutoRefreshing)
        {
            cts = new CancellationTokenSource();
            _ = AutoRefreshLoop(cts.Token);
        }
        else
        {
            cts?.Cancel();
            cts?.Dispose();
            cts = null;
        }
    }

    private async Task AutoRefreshLoop(CancellationToken token)
    {
        while (!token.IsCancellationRequested)
        {
            await GetObservation();
            try
            {
                await Task.Delay(100, token);
            }
            catch (TaskCanceledException)
            {
                break;
            }
        }
    }

    public void Dispose()
    {
        cts?.Cancel();
        cts?.Dispose();
    }
}