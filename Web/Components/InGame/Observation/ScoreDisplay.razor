@using SC2APIProtocol

<div class="bg-gray-800/50 text-gray-50 shadow rounded-lg mt-3">
    <div class="p-4">
        <h5 class="text-lg font-medium mb-2">Score</h5>
        @if (Score != null)
        {
            <div class="flex flex-wrap -mx-3">
                <div class="w-full md:w-1/2 px-3">
                    <h6 class="font-medium">Score Type: @Score.ScoreType</h6>
                    <p>Score: @Score.Score_</p>
                </div>
                <div class="w-full md:w-1/2 px-3">
                    <h6 class="font-medium">Details</h6>
                    <ul class="list-disc pl-5">
                        <li>Idle Production Time: @Score.ScoreDetails.IdleProductionTime</li>
                        <li>Idle Worker Time: @Score.ScoreDetails.IdleWorkerTime</li>
                        <li>Total Value Units: @Score.ScoreDetails.TotalValueUnits</li>
                        <li>Total Value Structures: @Score.ScoreDetails.TotalValueStructures</li>
                        <li>Killed Value Units: @Score.ScoreDetails.KilledValueUnits</li>
                        <li>Killed Value Structures: @Score.ScoreDetails.KilledValueStructures</li>
                        <li>Collected Minerals: @Score.ScoreDetails.CollectedMinerals</li>
                        <li>Collected Vespene: @Score.ScoreDetails.CollectedVespene</li>
                        <li>Collection Rate Minerals: @Score.ScoreDetails.CollectionRateMinerals</li>
                        <li>Collection Rate Vespene: @Score.ScoreDetails.CollectionRateVespene</li>
                        <li>Spent Minerals: @Score.ScoreDetails.SpentMinerals</li>
                        <li>Spent Vespene: @Score.ScoreDetails.SpentVespene</li>
                    </ul>
                </div>
            </div>
        }
        else
        {
            <p>No score data available.</p>
        }
    </div>
</div>

@code {
    [Parameter] public SC2APIProtocol.Score? Score { get; set; }
}